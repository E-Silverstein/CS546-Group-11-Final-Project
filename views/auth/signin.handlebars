<div class="flex justify-center pt-10">
    <div class="w-1/6">
        <form method="post" action="/login" id="loginForm" class="grid grid-cols-1 gap-2">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="h-10 rounded-md"> 
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="h-10 rounded-md">
            <button type="submit" class="bg-icon200 transition hover:bg-icon500 hover:text-icon100 font-semibold rounded-md py-2">Sign In</button>
        </form>
        <a href="/signup" class="inline-block">Dont have an account? Click here to sign up</a>
    </div>
</div>