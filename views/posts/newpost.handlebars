<div class="mt-24 flex justify-center">
    <form class="flex flex-col space-y-2 w-1/4" method="post" enctype="multipart/form-data" action="/posts/{{postid}}">

        <label for="post-image">Select Image</label>
        <input type="file" accept="image/*" id="post-image" name="post-image">
        
        <label for="description">Description</label>
        <input type="text" id="description" name="description" class="h-10 w-full rounded-md p-2">
        <span id="clothingLinksContainer" class="flex flex-col space-y-1 w-full">
            <label for="clothingLinks[]">Clothing Links</label>
            <input type="text" id="clothingLinks" name="clothingLinks[]" class="h-10 w-full rounded-md p-2">
            <button class="bg-icon200 transition hover:bg-icon500 hover:text-icon100 font-semibold rounded-md p-2" type="button" id="addClothingLink">+</button>
        </span>
        <label for="keywords">Keywords</label>
        <input type="text" id="keywords" name="keywords" class="h-10 w-full rounded-md p-2">
        <button type="submit" class="bg-icon200 transition hover:bg-icon500 hover:text-icon100 font-semibold rounded-md p-2">Create Post</button>
    </form>
</div>